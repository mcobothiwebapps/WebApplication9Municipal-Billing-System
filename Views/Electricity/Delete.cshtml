@model WebApplication9Municipal_Billing_System.Models.Electricity

@{
    ViewData["Title"] = "Delete Electricity Usage Record";
}

<h2>Delete Electricity Usage Record</h2>

<div class="card">
    <div class="card-body">
        <h5>Are you sure you want to delete this record?</h5>
        <p><strong>Usage:</strong> @Model.Usage kWh</p>
        <p><strong>Rate:</strong> @Model.Rate per kWh</p>
        <p><strong>Cost:</strong> @Model.Cost</p>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="ElectricityId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>
