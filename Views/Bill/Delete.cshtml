@model WebApplication9Municipal_Billing_System.Models.Bill

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h2>Delete</h2>
    <div>
        <h4>Are you sure you want to delete this?</h4>
        <dl class="row">
            <dt class="col-sm-2">Bill ID</dt>
            <dd class="col-sm-10">@Model.BillId</dd>
            
            <!-- Add other details as needed -->
            
            <dt class="col-sm-2">Total Cost</dt>
            <dd class="col-sm-10">@Model.TotalCost</dd>
        </dl>
        <form asp-action="Delete" asp-route-id="@Model.BillId">
            <input type="submit" value="Delete" class="btn btn-danger" /> <i class="fas fa-trash-alt"></i>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
        </form>
    </div>
</div>
