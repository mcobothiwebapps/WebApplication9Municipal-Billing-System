@model IEnumerable<WebApplication9Municipal_Billing_System.Models.Bill>

@{
    ViewData["Title"] = "Bills";
}

<div class="container">
    <h2>Bills</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Bill ID</th>
                <th>User ID</th>
                <th>Water Cost</th>
                <th>Electricity Cost</th>
                <th>Total Cost</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BillId</td>
                    <td>@item.UserId</td>
                    <td>@item.Water.Cost</td>
                    <td>@item.Electricity.Cost</td>
                    <td>@item.TotalCost</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.BillId" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i> Details</a>
                        <a asp-action="Edit" asp-route-id="@item.BillId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.BillId" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
