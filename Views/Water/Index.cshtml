@model IEnumerable<WebApplication9Municipal_Billing_System.Models.Water>

@{
    ViewData["Title"] = "Water Usage Records";
}

<h2>Water Usage Records</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Water Usage
    </a>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Usage (liters)</th>
            <th>Rate (per liter)</th>
            <th>Cost</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.WaterId</td>
                <td>@item.Usage</td>
                <td>@item.Rate</td>
                <td>@item.Cost</td>
                <td>@item.Reg?.Name @item.Reg?.Surname</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.WaterId" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.WaterId" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
